---
const stats = [
  {
    number: "16 tusen",
    label: "Aktive brukersteder",
    description: "Butikker og tjenester over hele Norge"
  },
  {
    number: "2 mill",
    label: "Aktive gavekort",
    description: "Gavekort i omløp hos våre kunder"
  },
  {
    number: "352 mill",
    label: "Saldo på gavekort",
    description: "Total verdi på utestående gavekort"
  }
];
---

<section class="statistics-section py-16 lg:py-20 bg-brand-background">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-3xl lg:text-4xl font-heading font-medium text-brand-heading mb-4">
        iGive – Størst i Norge på gavekort
      </h2>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-12">
      {stats.map((stat) => (
        <div class="text-center">
          <div class="mb-2">
            <div class="text-4xl lg:text-5xl font-heading font-medium text-brand-heading mb-1">
              {stat.number}
            </div>
            <div class="text-xl lg:text-2xl font-heading font-medium text-brand-heading">
              {stat.label}
            </div>
          </div>
          <p class="text-brand-text opacity-75 text-sm lg:text-base font-light">
            {stat.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>