---
import { TEST_AMOUNTS, TEST_VALUES } from '../../lib/constants';

export interface Props {
  defaultCount?: number;
  defaultValue?: number;
}

const { defaultCount = 10, defaultValue = 500 } = Astro.props;
---

<div class="test-configuration">
  <div class="mb-8 animate-fadeInUp">
    <h1 class="text-4xl font-bold text-gray-900 mb-3 leading-tight">Test konfigurasjon</h1>
    <p class="text-lg text-gray-600 leading-relaxed">
      Konfigurer testdata for Ã¥ se hvordan distribusjonen fungerer med ulike mengder gavekort.
    </p>
  </div>

  <div class="bg-white rounded-2xl border border-gray-200 shadow-sm p-8">
    <div class="space-y-6">
      <!-- Antall gavekort -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-3">Antall gavekort</label>
        <div class="grid grid-cols-5 gap-3">
          {TEST_AMOUNTS.map(count => (
            <button
              type="button"
              class="test-count-btn px-4 py-3 border-2 border-gray-200 rounded-lg hover:border-[#D4A574] hover:bg-[#FDF9F5] transition-all font-medium transform hover:scale-105 active:scale-95"
              data-count={count}
              class:list={[
                count === defaultCount && 'border-[#D4A574] bg-[#FDF9F5]'
              ]}
            >
              {count}
            </button>
          ))}
        </div>
        <div class="mt-3">
          <input
            type="number"
            id="custom-count"
            class="px-4 py-2 border border-gray-200 rounded-lg w-32 text-center transition-all focus:border-[#D4A574] focus:ring-2 focus:ring-[#D4A574]/20 focus:outline-none hover:border-gray-300"
            placeholder="Egendefinert"
            min="1"
            max="100"
          />
          <span class="text-sm text-gray-500 ml-2">Eller skriv inn et tall (1-100)</span>
        </div>
      </div>

      <!-- Verdi per gavekort -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-3">Verdi per gavekort (kr)</label>
        <div class="grid grid-cols-4 gap-3">
          {TEST_VALUES.slice(0, 4).map(value => (
            <button
              type="button"
              class="test-value-btn px-4 py-3 border-2 border-gray-200 rounded-lg hover:border-[#D4A574] hover:bg-[#FDF9F5] transition-all font-medium transform hover:scale-105 active:scale-95"
              data-value={value}
              class:list={[
                value === defaultValue && 'border-[#D4A574] bg-[#FDF9F5]'
              ]}
            >
              {value.toLocaleString('nb-NO')}
            </button>
          ))}
        </div>
        <div class="grid grid-cols-3 gap-3 mt-3">
          {TEST_VALUES.slice(4).map(value => (
            <button
              type="button"
              class="test-value-btn px-4 py-3 border-2 border-gray-200 rounded-lg hover:border-[#D4A574] hover:bg-[#FDF9F5] transition-all font-medium transform hover:scale-105 active:scale-95"
              data-value={value}
            >
              {value.toLocaleString('nb-NO')}
            </button>
          ))}
        </div>
      </div>

      <!-- Total summary -->
      <div class="pt-4 border-t">
        <div class="bg-gradient-to-r from-gray-50 to-gray-100 rounded-xl p-4">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm text-gray-600">Total testverdi:</p>
              <p class="text-2xl font-bold text-[#D4A574]" id="test-total-value">
                kr {(defaultCount * defaultValue).toLocaleString('nb-NO')}
              </p>
            </div>
            <div>
              <p class="text-sm text-gray-600">Gavekort:</p>
              <p class="text-2xl font-bold text-gray-900" id="test-total-count">
                {defaultCount} stk
              </p>
            </div>
          </div>
        </div>
      </div>

      <button
        type="button"
        id="start-test-btn"
        class="w-full px-6 py-4 bg-gradient-to-r from-[#D4A574] to-[#C49560] text-white rounded-xl font-bold text-lg hover:from-[#C49560] hover:to-[#B88550] transition-all shadow-lg transform hover:scale-[1.02] active:scale-[0.98] hover:shadow-xl"
      >
        Start testdistribusjon
      </button>
    </div>
  </div>
</div>