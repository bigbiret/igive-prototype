---
// Minimal, auto-playing animation component
---

<div class="payment-animation-minimal">
  <div class="animation-scene">
    <!-- Phone -->
    <div class="device phone">
      <div class="screen">
        <div class="visa-card">
          <span class="visa-text">VISA</span>
          <span class="card-dots">•••• 4242</span>
        </div>
      </div>
      <!-- NFC waves -->
      <div class="nfc-waves">
        <span class="wave"></span>
        <span class="wave"></span>
        <span class="wave"></span>
      </div>
    </div>
    
    <!-- Terminal -->
    <div class="device terminal">
      <div class="terminal-screen">
        <div class="amount">kr 299</div>
        <div class="status">Godkjent</div>
      </div>
    </div>
    
    <!-- Success checkmark -->
    <div class="success-indicator">
      <svg viewBox="0 0 52 52" class="checkmark">
        <circle cx="26" cy="26" r="25" fill="none"/>
        <path fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8"/>
      </svg>
    </div>
  </div>
</div>

<style>
  .payment-animation-minimal {
    @apply w-full h-full flex items-center justify-center;
    min-height: 350px;
  }
  
  .animation-scene {
    @apply relative flex items-center justify-center gap-8;
    animation: scene-pulse 8s ease-in-out infinite;
  }
  
  @keyframes scene-pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.02); }
  }
  
  /* Devices */
  .device {
    @apply relative;
  }
  
  .phone {
    @apply bg-gray-800 rounded-2xl p-3 shadow-xl;
    width: 100px;
    height: 180px;
    animation: phone-tap 8s ease-in-out infinite;
  }
  
  @keyframes phone-tap {
    0%, 100% { transform: translateX(0); }
    25%, 35% { transform: translateX(40px); }
    75% { transform: translateX(0); }
  }
  
  .phone .screen {
    @apply bg-gray-900 rounded-lg h-full flex flex-col items-center justify-center p-3;
  }
  
  .visa-card {
    @apply flex flex-col items-center gap-2;
  }
  
  .visa-text {
    @apply font-bold text-lg;
    color: #1A5490;
  }
  
  .card-dots {
    @apply text-gray-400 text-xs;
  }
  
  /* NFC Waves */
  .nfc-waves {
    @apply absolute -right-6 top-1/2 -translate-y-1/2;
    opacity: 0;
    animation: waves-appear 8s ease-in-out infinite;
  }
  
  @keyframes waves-appear {
    0%, 20%, 40%, 100% { opacity: 0; }
    25%, 35% { opacity: 1; }
  }
  
  .wave {
    @apply absolute block border rounded-full;
    border-color: #6366f1;
    animation: wave-expand 1.5s ease-out infinite;
  }
  
  .wave:nth-child(1) {
    width: 20px;
    height: 20px;
    animation-delay: 0s;
  }
  
  .wave:nth-child(2) {
    width: 30px;
    height: 30px;
    top: -5px;
    left: -5px;
    animation-delay: 0.3s;
  }
  
  .wave:nth-child(3) {
    width: 40px;
    height: 40px;
    top: -10px;
    left: -10px;
    animation-delay: 0.6s;
  }
  
  @keyframes wave-expand {
    0% {
      opacity: 0.8;
      transform: scale(0.8);
    }
    100% {
      opacity: 0;
      transform: scale(1.8);
    }
  }
  
  /* Terminal */
  .terminal {
    @apply bg-gray-700 rounded-xl p-4 shadow-xl;
    width: 120px;
    height: 100px;
  }
  
  .terminal-screen {
    @apply bg-gray-800 rounded-lg h-full flex flex-col items-center justify-center;
    color: #4ade80;
    font-family: 'Courier New', monospace;
  }
  
  .amount {
    @apply text-lg font-bold mb-2;
  }
  
  .status {
    @apply text-sm;
    opacity: 0;
    animation: status-blink 8s ease-in-out infinite;
  }
  
  @keyframes status-blink {
    0%, 30%, 100% { opacity: 0; }
    35%, 75% { opacity: 1; }
  }
  
  /* Success indicator */
  .success-indicator {
    @apply absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2;
    width: 80px;
    height: 80px;
    opacity: 0;
    animation: success-appear 8s ease-in-out infinite;
  }
  
  @keyframes success-appear {
    0%, 60%, 100% { 
      opacity: 0;
      transform: translate(-50%, -50%) scale(0.5);
    }
    70%, 90% { 
      opacity: 1;
      transform: translate(-50%, -50%) scale(1);
    }
  }
  
  .checkmark {
    @apply w-full h-full;
    filter: drop-shadow(0 2px 8px rgba(34, 197, 94, 0.4));
  }
  
  .checkmark circle {
    stroke: #22c55e;
    stroke-width: 2;
    stroke-dasharray: 166;
    stroke-dashoffset: 166;
    animation: checkmark-circle 8s ease-in-out infinite;
  }
  
  @keyframes checkmark-circle {
    0%, 65% { stroke-dashoffset: 166; }
    75%, 100% { stroke-dashoffset: 0; }
  }
  
  .checkmark path {
    stroke: #22c55e;
    stroke-width: 3;
    stroke-linecap: round;
    stroke-linejoin: round;
    stroke-dasharray: 48;
    stroke-dashoffset: 48;
    animation: checkmark-check 8s ease-in-out infinite;
  }
  
  @keyframes checkmark-check {
    0%, 70% { stroke-dashoffset: 48; }
    80%, 100% { stroke-dashoffset: 0; }
  }
  
  /* Responsive adjustments */
  @media (max-width: 640px) {
    .animation-scene {
      @apply gap-4;
      transform: scale(0.85);
    }
    
    .phone {
      width: 80px;
      height: 140px;
    }
    
    .terminal {
      width: 100px;
      height: 80px;
    }
    
    .success-indicator {
      width: 60px;
      height: 60px;
    }
  }
  
  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .animation-scene,
    .phone,
    .nfc-waves,
    .wave,
    .status,
    .success-indicator,
    .checkmark circle,
    .checkmark path {
      animation: none;
    }
    
    .nfc-waves,
    .status,
    .success-indicator {
      opacity: 1;
    }
  }
</style>