<script>
  // Rotating words animation with smooth container width transition
  const words = ['enklere', 'smartere', 'raskere', 'tryggere', 'moderne', 'fleksible', 'effektive', 'skalerbare', 'intuitive', 'p√•litelige', 'l√∏nnsomt', 's√∏ml√∏se'];
  let currentIndex = 0;
  const rotatingElement = document.getElementById('rotating-word');
  const container = document.getElementById('rotating-word-container');
  
  // Calculate and set the max width needed to prevent layout shift
  if (rotatingElement && container) {
    // Create temporary element to measure word widths
    const measurer = document.createElement('span');
    measurer.style.position = 'absolute';
    measurer.style.visibility = 'hidden';
    measurer.style.whiteSpace = 'nowrap';
    measurer.className = rotatingElement.className;
    document.body.appendChild(measurer);
    
    // Find the widest word
    let maxWidth = 0;
    words.forEach(word => {
      measurer.textContent = word;
      const width = measurer.offsetWidth;
      if (width > maxWidth) maxWidth = width;
    });
    
    // Set container to max width to prevent jumping
    container.style.width = maxWidth + 10 + 'px'; // Add small buffer
    document.body.removeChild(measurer);
    
    // Start animation
    setInterval(() => {
      // Current word exits downward
      rotatingElement.style.opacity = '0';
      rotatingElement.style.transform = 'translateY(40px)';
      
      setTimeout(() => {
        // Change word while invisible
        currentIndex = (currentIndex + 1) % words.length;
        rotatingElement.textContent = words[currentIndex];
        
        // Position new word above (invisible)
        rotatingElement.style.transition = 'none';
        rotatingElement.style.transform = 'translateY(-40px)';
        
        // Re-enable transition and bring word down from top
        setTimeout(() => {
          rotatingElement.style.transition = 'all 0.7s ease-in-out';
          rotatingElement.style.opacity = '1';
          rotatingElement.style.transform = 'translateY(0)';
        }, 50);
      }, 700); // Wait for exit animation to complete
    }, 3500); // Slightly longer interval for better readability
  }

  // Smooth scroll for anchor links
  document.addEventListener('DOMContentLoaded', () => {
    // Handle all anchor links with smooth scrolling
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const targetId = (this as HTMLAnchorElement).getAttribute('href');
        if (targetId && targetId !== '#') {
          const targetElement = document.querySelector(targetId);
          if (targetElement) {
            targetElement.scrollIntoView({
              behavior: 'smooth',
              block: 'start'
            });
          }
        }
      });
    });
  });
</script>

