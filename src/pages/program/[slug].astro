---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

export async function getStaticPaths() {
  // This will be populated with actual program data later
  const programs = [
    { slug: 'midtbykortet', name: 'Midtbykortet' },
    { slug: 'gullfunn', name: 'Gullfunn' },
    { slug: 'mathallen', name: 'Mathallen Oslo' },
    // Add more programs as needed
  ];

  return programs.map(program => ({
    params: { slug: program.slug },
    props: { program }
  }));
}

const { program } = Astro.props;
---

<Layout title={`${program.name} - iGive`}>
  <Header />
  <main class="site-content">
    <!-- Program Profile Content -->
    <section class="py-16">
      <div class="container mx-auto px-4">
        <h1 class="text-4xl font-heading font-medium text-brand-heading mb-6">
          {program.name}
        </h1>
        
        <!-- Hero Section -->
        <div class="mb-12">
          <div class="bg-brand-background p-8 rounded-lg">
            <button class="bg-brand-heading text-white px-8 py-4 rounded-full font-medium text-lg">
              Kjøp gavekort
            </button>
          </div>
        </div>

        <!-- About Section -->
        <div class="mb-12">
          <h2 class="text-2xl font-heading font-medium text-brand-heading mb-4">
            Om gavekortet
          </h2>
          <p class="text-brand-text">
            Hvor det kan brukes, gyldighet, korttyper, leveringsmåter...
          </p>
        </div>

        <!-- How to Use Section -->
        <div class="mb-12">
          <h2 class="text-2xl font-heading font-medium text-brand-heading mb-4">
            Bruk
          </h2>
          <p class="text-brand-text">
            Hvordan bruke (app/wallet/QR/plast), CVC-info, saldo-lenker...
          </p>
        </div>

        <!-- Map/Locations Section -->
        <div class="mb-12">
          <h2 class="text-2xl font-heading font-medium text-brand-heading mb-4">
            Hvor kan jeg bruke det?
          </h2>
          <p class="text-brand-text">
            Utvalgte brukersteder...
          </p>
        </div>

        <!-- FAQ Section -->
        <div class="mb-12">
          <h2 class="text-2xl font-heading font-medium text-brand-heading mb-4">
            Ofte stilte spørsmål
          </h2>
          <p class="text-brand-text">
            4-6 vanligste spørsmål...
          </p>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>