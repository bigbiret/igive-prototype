---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Sjekk saldo - iGive">
  <Header />
  <main class="site-content">
    <section class="py-12 bg-brand-background">
      <div class="container mx-auto px-4">
        <h1 class="text-3xl sm:text-4xl font-heading font-medium text-brand-heading text-center mb-8">
          Sjekk saldo p√• gavekort
        </h1>
        
        <div class="max-w-md mx-auto bg-white rounded-lg shadow-sm p-8">
          <form class="space-y-6">
            <div>
              <label for="card-number" class="block text-sm font-medium text-gray-700 mb-2">
                Gavekortnummer
              </label>
              <input
                type="text"
                id="card-number"
                placeholder="Skriv inn gavekortnummer"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-heading focus:border-brand-heading"
              />
            </div>
            
            <div>
              <label for="pin-code" class="block text-sm font-medium text-gray-700 mb-2">
                PIN-kode
              </label>
              <input
                type="password"
                id="pin-code"
                placeholder="Skriv inn PIN-kode"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-brand-heading focus:border-brand-heading"
              />
            </div>
            
            <button
              type="submit"
              class="w-full bg-brand-heading text-white font-medium py-3 px-6 rounded-lg hover:bg-opacity-90 transition-colors"
            >
              Sjekk saldo
            </button>
          </form>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>