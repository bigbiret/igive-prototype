---

<Layout title="Kjøp gavekort - iGive">
  <Header />
  <main class="site-content">
    <!-- Hero Section - Moderne med gradient -->
    <section class="relative py-12 bg-gradient-to-br from-igive-background via-white to-orange-50/30 overflow-hidden">
      <!-- Dekorativ bakgrunn -->
      <div class="absolute inset-0 opacity-5">
        <div class="absolute top-0 right-0 w-96 h-96 bg-igive-primary rounded-full blur-3xl"></div>
        <div class="absolute bottom-0 left-0 w-96 h-96 bg-orange-300 rounded-full blur-3xl"></div>
      </div>
      <div class="container mx-auto px-4 max-w-6xl relative z-10">
        <div class="max-w-2xl">
          <h1 class="text-2xl md:text-4xl font-heading font-bold text-igive-heading mb-3 md:mb-4 leading-tight">
            Finn det perfekte gavekortet
          </h1>
          <p class="text-sm md:text-lg text-igive-text/80 mb-6 md:mb-8">
            Over <span class="font-semibold text-igive-primary">16 000</span> steder å velge mellom • Digital levering på sekunder
          </p>
        </div>
        
        <!-- Søkefelt seksjon -->
        <div class="max-w-2xl mx-auto">
          <!-- Søkefelt -->
          <div class="relative mb-4">
            <input
              type="text"
              id="search"
              placeholder="Søk etter butikk, merke eller kategori..."
              class="w-full px-6 py-4 pl-14 pr-14 bg-white border border-gray-200 rounded-2xl shadow-sm focus:outline-none focus:ring-2 focus:ring-igive-primary/20 focus:border-igive-primary text-igive-text hover:shadow-md transition-all placeholder:text-gray-400 text-base"
              aria-label="Søk etter gavekort"
            />
            <svg class="absolute left-5 top-1/2 -translate-y-1/2 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m21 21-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            <button 
              id="clear-search"
              class="absolute right-4 top-1/2 -translate-y-1/2 p-2 text-gray-400 hover:text-gray-600 rounded-lg hover:bg-gray-100 transition-all hidden"
              aria-label="Tøm søkefelt"
            >
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>
          
          <!-- Hurtigvalg tags -->
          <div class="flex items-center gap-3">
            <span class="text-sm text-gray-500 whitespace-nowrap">Populære søk:</span>
            <div class="flex flex-wrap gap-2">
              <button class="quick-search px-3 py-1.5 text-sm bg-white text-gray-600 rounded-full hover:bg-igive-primary hover:text-white transition-all border border-gray-200">
                Restauranter
              </button>
              <button class="quick-search px-3 py-1.5 text-sm bg-white text-gray-600 rounded-full hover:bg-igive-primary hover:text-white transition-all border border-gray-200">
                Spa & velvære
              </button>
              <button class="quick-search px-3 py-1.5 text-sm bg-white text-gray-600 rounded-full hover:bg-igive-primary hover:text-white transition-all border border-gray-200">
                Elektronikk
              </button>
              <button class="quick-search px-3 py-1.5 text-sm bg-white text-gray-600 rounded-full hover:bg-igive-primary hover:text-white transition-all border border-gray-200">
                Klær
              </button>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Main Content -->
    <section class="py-12 bg-gradient-to-b from-gray-50/50 to-white">
      <div class="container mx-auto px-4 max-w-6xl">
        
        <!-- Moderne kategorier med ikoner - responsiv -->
        <div class="flex gap-2 mb-8 overflow-x-auto pb-2 scrollbar-thin -mx-4 px-4 md:mx-0 md:px-0">
          {categories.map(cat => (
            <button 
              data-category={cat.id}
              class={`category-tab flex items-center gap-1 md:gap-2 px-3 md:px-5 py-2 md:py-2.5 text-xs md:text-sm font-medium whitespace-nowrap rounded-full transition-all ${
                cat.active 
                  ? 'bg-igive-primary text-white shadow-lg shadow-igive-primary/20' 
                  : 'bg-white text-gray-600 hover:bg-gray-50 border border-gray-200'
              }`}
              role="tab"
              aria-selected={cat.active}
            >
              <span class="category-icon text-base md:text-sm">
                {cat.id === 'alle' && '✨'}
                {cat.id === 'popular' && '🔥'}
                {cat.id === 'mat' && '🍽️'}
                {cat.id === 'shopping' && '🛍️'}
                {cat.id === 'tjenester' && '🛠️'}
              </span>
              <span class="hidden sm:inline">{cat.name}</span>
              <span class="sm:hidden">{cat.name.slice(0, 3)}</span>
              <span class={`px-1.5 md:px-2 py-0.5 text-[10px] md:text-xs rounded-full ${
                cat.active 
                  ? 'bg-white/20 text-white' 
                  : 'bg-gray-100 text-gray-500'
              }`}>
                {cat.count}
              </span>
            </button>
          ))}
        </div>
        
        <!-- Moderne Filter Bar med glassmorfisme -->
        <div class="sticky top-0 bg-white/80 backdrop-blur-md z-10 py-4 px-6 mb-8 rounded-2xl shadow-lg border border-gray-100">
          <div class="flex flex-wrap items-center gap-4">
            
            <!-- Format filter med ikoner -->
            <div class="flex items-center gap-3">
              <span class="text-sm font-medium text-gray-700">Format:</span>
              <button class="filter-chip flex items-center gap-2 px-4 py-2 text-sm bg-white border border-gray-200 rounded-xl hover:border-igive-primary hover:shadow-md transition-all" data-filter="digital">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                </svg>
                Digital
              </button>
              <button class="filter-chip flex items-center gap-2 px-4 py-2 text-sm bg-white border border-gray-200 rounded-xl hover:border-igive-primary hover:shadow-md transition-all" data-filter="physical">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                </svg>
                Fysisk kort
              </button>
            </div>
            
            <!-- Sted filter med ikon -->
            <div class="flex items-center gap-3">
              <span class="text-sm font-medium text-gray-700">Sted:</span>
              <select class="text-sm border border-gray-200 rounded-xl px-4 py-2 pr-8 bg-white focus:outline-none focus:ring-2 focus:ring-igive-primary/20 focus:border-igive-primary hover:shadow-md transition-all appearance-none cursor-pointer" style="background-image: url('data:image/svg+xml;charset=UTF-8,%3csvg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 24 24%22 fill=%22none%22 stroke=%22currentColor%22 stroke-width=%222%22 stroke-linecap=%22round%22 stroke-linejoin=%22round%22%3e%3cpolyline points=%226 9 12 15 18 9%22%3e%3c/polyline%3e%3c/svg%3e'); background-repeat: no-repeat; background-position: right 0.7rem center; background-size: 1.2em;">
                <option>Alle steder</option>
                <option>📍 Nær meg</option>
                <option>Oslo</option>
                <option>Bergen</option>
                <option>Trondheim</option>
                <option>Stavanger</option>
                <option>Drammen</option>
              </select>
            </div>
            
            <!-- Reset med ikon -->
            <button 
              id="reset-filters"
              class="flex items-center gap-1 px-3 py-1.5 text-sm text-igive-primary hover:bg-igive-primary/10 rounded-lg transition-all hidden"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
              </svg>
              Nullstill
            </button>
            
            <!-- Status og sortering med bedre design -->
            <div class="ml-auto flex items-center gap-4">
              <div class="px-3 py-1.5 bg-gray-50 rounded-lg">
                <span class="text-sm text-gray-600">
                  Viser <span class="font-semibold text-igive-primary" id="result-count">6</span> av <span id="total-count">127</span>
                </span>
              </div>
              <select id="sort" class="text-sm border border-gray-200 rounded-xl px-4 py-2 pr-8 bg-white focus:outline-none focus:ring-2 focus:ring-igive-primary/20 focus:border-igive-primary hover:shadow-md transition-all appearance-none cursor-pointer" style="background-image: url('data:image/svg+xml;charset=UTF-8,%3csvg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 24 24%22 fill=%22none%22 stroke=%22currentColor%22 stroke-width=%222%22 stroke-linecap=%22round%22 stroke-linejoin=%22round%22%3e%3cpolyline points=%226 9 12 15 18 9%22%3e%3c/polyline%3e%3c/svg%3e'); background-repeat: no-repeat; background-position: right 0.7rem center; background-size: 1.2em;">
                <option value="popular">🔥 Populære</option>
                <option value="alpha">🔤 A-Å</option>
                <option value="newest">✨ Nyeste</option>
              </select>
            </div>
          </div>
        </div>
        
        <!-- Partner Grid med forbedret layout -->
        <div id="partners-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
          {allPartners.slice(0, initialDisplayCount).map(partner => (
            <article 
              class="partner-card bg-white rounded-2xl overflow-hidden shadow-md hover:shadow-2xl transition-all duration-300 cursor-pointer group relative"
              data-category={partner.category.join(',')}
              data-formats={partner.formats?.join(',')}
              data-locations={partner.locationsList?.join(',')}
              data-popularity={partner.popularity}
              data-id={partner.id}
              tabindex="0"
              role="article"
              aria-label={`${partner.name} gavekort`}
            >
              {/* Bakgrunnsbilde seksjon */}
              <div class="h-48 relative overflow-hidden">
                {partner.backgroundImage ? (
                  <img 
                    src={partner.backgroundImage}
                    alt=""
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                    loading="lazy"
                  />
                ) : (
                  <div class="w-full h-full bg-gradient-to-br from-gray-100 to-gray-50"></div>
                )}
                
                {/* Overlay gradient */}
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"></div>
                
                {/* Logo overlay */}
                <div class="absolute bottom-4 left-4 bg-white/95 backdrop-blur rounded-xl p-3 shadow-lg">
