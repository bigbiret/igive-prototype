<script>
  // DOM elements
  const searchInput = document.getElementById('search') as HTMLInputElement;
  const clearButton = document.getElementById('clear-search');
  const categoryTabs = document.querySelectorAll('.category-tab');
  const filterChips = document.querySelectorAll('.filter-chip');
  const resetButton = document.getElementById('reset-filters');
  const partnerCards = document.querySelectorAll('.partner-card');
  const resultCount = document.getElementById('result-count');
  const emptyState = document.getElementById('empty-state');
  const partnersGrid = document.getElementById('partners-grid');
  const sortSelect = document.getElementById('sort') as HTMLSelectElement;
  
  // State
  let activeFilters = {
    search: '',
    category: 'alle',
    formats: [],
    location: ''
  };
  
  // Search functionality
  searchInput?.addEventListener('input', (e) => {
    const value = (e.target as HTMLInputElement).value;
    activeFilters.search = value;
    
    // Show/hide clear button
    if (clearButton) {
      clearButton.classList.toggle('hidden', !value);
    }
    
    filterPartners();
  });
  
  clearButton?.addEventListener('click', () => {
    searchInput.value = '';
    activeFilters.search = '';
    clearButton.classList.add('hidden');
    filterPartners();
  });
  
  // Category tabs
  categoryTabs.forEach(tab => {
    tab.addEventListener('click', function() {
      // Update visual state
      categoryTabs.forEach(t => {
        t.classList.remove('text-igive-primary', 'border-igive-primary');
        t.classList.add('text-gray-600', 'border-transparent');
        t.setAttribute('aria-selected', 'false');
      });
      
      this.classList.remove('text-gray-600', 'border-transparent');
      this.classList.add('text-igive-primary', 'border-igive-primary');
      this.setAttribute('aria-selected', 'true');
      
      activeFilters.category = this.dataset.category || 'alle';
      filterPartners();
    });
  });
  
  // Filter chips
  filterChips.forEach(chip => {
    chip.addEventListener('click', function() {
      this.classList.toggle('bg-igive-primary');
      this.classList.toggle('text-white');
      this.classList.toggle('border-igive-primary');
      
      const filter = this.dataset.filter;
      
      if (filter) {
        const index = activeFilters.formats.indexOf(filter);
        if (index > -1) {
          activeFilters.formats.splice(index, 1);
        } else {
          activeFilters.formats.push(filter);
        }
      }
      
      // Show reset button if any filter active
      const hasActiveFilters = activeFilters.formats.length > 0;
      resetButton?.classList.toggle('hidden', !hasActiveFilters);
      
      filterPartners();
    });
  });
  
  // Reset filters
  resetButton?.addEventListener('click', () => {
    filterChips.forEach(chip => {
      chip.classList.remove('bg-igive-primary', 'text-white', 'border-igive-primary');
    });
    
    activeFilters = {
      ...activeFilters,
      formats: []
    };
    
    resetButton.classList.add('hidden');
    filterPartners();
  });
  
  // Sort functionality
  sortSelect?.addEventListener('change', () => {
    sortPartners();
  });
  
  // Filter function
  function filterPartners() {
    let visibleCount = 0;
    const cards = Array.from(partnerCards) as HTMLElement[];
    
    cards.forEach(card => {
      let show = true;
      
      // Search filter
      if (activeFilters.search && !card.textContent?.toLowerCase().includes(activeFilters.search.toLowerCase())) {
        show = false;
      }
      
      // Category filter
      if (activeFilters.category !== 'alle' && !card.dataset.category?.includes(activeFilters.category)) {
        show = false;
      }
      
      // Format filters
      if (activeFilters.formats.length > 0) {
        const hasFormat = activeFilters.formats.some(f => card.dataset.formats?.includes(f));
        if (!hasFormat) show = false;
      }
      
      card.style.display = show ? '' : 'none';
      if (show) visibleCount++;
    });
    
    // Update count
    if (resultCount) resultCount.textContent = visibleCount.toString();
    
    // Show empty state if needed
    if (emptyState && partnersGrid) {
      if (visibleCount === 0) {
        partnersGrid.classList.add('hidden');
        emptyState.classList.remove('hidden');
      } else {
        partnersGrid.classList.remove('hidden');
        emptyState.classList.add('hidden');
      }
    }
    
    sortPartners();
  }
  
  // Sort function
  function sortPartners() {
    const sortValue = sortSelect?.value || 'popular';
    const cards = Array.from(partnerCards).filter(c => (c as HTMLElement).style.display !== 'none') as HTMLElement[];
    const grid = document.getElementById('partners-grid');
    
    cards.sort((a, b) => {
      switch(sortValue) {
        case 'alpha':
          return (a.querySelector('h3')?.textContent || '').localeCompare(b.querySelector('h3')?.textContent || '');
        case 'newest':
          return parseInt(b.dataset.id || '0') - parseInt(a.dataset.id || '0');
        default: // popular
          return 0;
      }
    });
    
    // Reorder in DOM
    cards.forEach(card => grid?.appendChild(card));
  }
  
  // Make cards clickable
  partnerCards.forEach(card => {
    card.addEventListener('click', (e) => {
      // Don't trigger if clicking on buttons
      if ((e.target as HTMLElement).tagName !== 'BUTTON') {
        const button = card.querySelector('button');
        button?.click();
      }
    });
    
    // Keyboard navigation
    card.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        const button = card.querySelector('button');
        button?.click();
      }
    });
  });
</script>

