                </div>
              </div>
              
              {/* Content med mer info */}
              <div class="p-5">
                <h3 class="font-semibold text-igive-heading text-lg mb-1 group-hover:text-igive-primary transition-colors">
                  {partner.name}
                </h3>
                <p class="text-sm text-gray-500 mb-3">
                  {partner.type}
                </p>
                
                {/* Lokasjon info */}
                {partner.locations && (
