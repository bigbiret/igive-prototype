    scheduledTime: null as string | null,
    language: 'nb',
    termsAccepted: false,
    availableGiftCards: [
      { id: 2, value: 500, code: 'XXX-002' },
      { id: 3, value: 1000, code: 'XXX-003' },
      { id: 4, value: 1000, code: 'XXX-004' },
