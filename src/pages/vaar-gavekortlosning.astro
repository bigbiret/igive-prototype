---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Vår gavekortløsning - iGive">
  <Header />
  <main class="site-content">
    <section class="py-16">
      <div class="container mx-auto px-4">
        <h1 class="text-4xl font-heading font-medium text-brand-heading mb-6">
          Vår gavekortløsning
        </h1>
        <p class="text-lg text-brand-text">
          Dypere produkt/argumentasjonsside med lengre innhold, case-utdrag, teknisk oversikt på høyt nivå
        </p>
        
        <div class="mt-8">
          <button class="bg-brand-heading text-white px-8 py-4 rounded-full font-medium text-lg">
            Book møte
          </button>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>