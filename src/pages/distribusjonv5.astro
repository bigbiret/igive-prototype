      const formattedDate = date.toLocaleDateString('nb-NO', {
        weekday: 'long',
        day: 'numeric',
        month: 'long',
        year: 'numeric'
      });
      preview.textContent = `${formattedDate} kl. ${timeInput.value}`;
    }
