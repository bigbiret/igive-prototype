---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const base = import.meta.env.BASE_URL;
---

<Layout title="Fysiske gavekort - Premium plastkort med egen design | iGive">
  <Header />
  <main class="site-content">
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-b from-white to-igive-background py-16 lg:py-20">
      <div class="container mx-auto px-6">
        <div class="max-w-5xl mx-auto">
          <!-- Badge -->
          <div class="inline-flex items-center gap-2 bg-igive-primary/10 px-4 py-2 rounded-full mb-6">
            <span class="text-sm font-semibold text-igive-primary">Klassisk valg</span>
            <svg class="w-4 h-4 text-igive-primary" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
          </div>
          
          <h1 class="text-4xl lg:text-5xl font-heading font-bold text-igive-heading mb-6">
            Fysiske gavekort
          </h1>
          
          <p class="text-xl text-igive-text mb-8 max-w-3xl">
            Premium plastkort med egen merkevare og design. 
            Det tradisjonelle gavekortet som kundene kjenner og stoler på.
          </p>
          
          <!-- Key Stats -->
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 mb-8">
            <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
              <div class="text-3xl font-bold text-igive-primary mb-2">100%</div>
              <div class="text-sm text-gray-600">Tilpassbart design</div>
            </div>
            <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
              <div class="text-3xl font-bold text-igive-primary mb-2">5-7</div>
              <div class="text-sm text-gray-600">Dagers produksjon</div>
            </div>
            <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
              <div class="text-3xl font-bold text-igive-primary mb-2">500+</div>
              <div class="text-sm text-gray-600">Minimum bestilling</div>
            </div>
          </div>
          
          <!-- CTAs -->
          <div class="flex flex-col sm:flex-row gap-4">
            <a href={`${base}kontakt`} class="px-8 py-4 bg-igive-primary text-white rounded-full hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200 font-semibold text-center">
              Book møte
            </a>
            <a href={`${base}informasjon-til-butikker`} class="px-8 py-4 border-2 border-gray-400 text-igive-heading bg-white rounded-full hover:border-igive-primary hover:shadow-md transform hover:-translate-y-0.5 transition-all duration-200 font-semibold text-center">
              Les mer for butikker
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Visual Hero Section -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-6">
        <div class="max-w-5xl mx-auto">
          <div class="relative">
            <img src={`${base}physical gift card.png`} alt="Fysiske gavekort" class="w-full h-96 object-cover rounded-2xl shadow-xl">
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent rounded-2xl flex items-end">
              <div class="p-8 text-white max-w-2xl">
                <h2 class="text-3xl font-bold mb-3">Premium plastkort med din merkevare</h2>
                <p class="text-white/90 text-lg">
                  Høykvalitets gavekort som styrker merkevaren og gir en fysisk gavefølelse.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- How It Works -->
    <section class="py-16 bg-igive-background">
      <div class="container mx-auto px-6">
        <div class="max-w-5xl mx-auto">
          <h2 class="text-3xl font-heading font-bold text-igive-heading mb-12 text-center">
            Fra design til levering
          </h2>
          
          <div class="grid md:grid-cols-3 gap-8">
            <div class="bg-white rounded-xl p-6 shadow-sm hover:shadow-lg transition-shadow">
              <div class="w-16 h-16 bg-gradient-to-br from-igive-primary/20 to-igive-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-igive-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
              <h3 class="font-semibold text-lg mb-2 text-center">Design og godkjenning</h3>
              <p class="text-gray-600 text-center">Vi utvikler unikt design basert på deres merkevare og ønsker.</p>
            </div>
            
            <div class="bg-white rounded-xl p-6 shadow-sm hover:shadow-lg transition-shadow">
              <div class="w-16 h-16 bg-gradient-to-br from-igive-primary/20 to-igive-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
